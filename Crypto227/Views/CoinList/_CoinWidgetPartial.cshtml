@model Coin
<div>
    
    @{
        var display = Model.DataTypes.FirstOrDefault(x => x.Key.Equals("DISPLAY", StringComparison.OrdinalIgnoreCase));

        foreach (var coinType in display.Value.CoinTypes)
         {
             var coinName = coinType.Key;
             var usdCurrency = coinType.Value.Currencies.FirstOrDefault(x=> x.Key.Equals("USD")).Value;
      
           <div class="col-lg-2 col-md-2 col-sm-2">
               <div class="card card-stats">
                   <div class="card-header" data-background-color="blue">
                       <i class="material-icons">@usdCurrency.Fromsymbol</i>
                   </div>
                   <div class="card-content">
                       <p class="category">@coinName</p>
                       <p class="title price">
                           @usdCurrency.Price
                       </p>
                       <p class="title percentage">
                           @usdCurrency.Changepct24Hour
                       </p>
                   </div>
                   <div class="card-footer">
                       <div class="stats">
                           <i class="material-icons">update</i>   @usdCurrency.Lastupdate 
                           <i>from  @usdCurrency.Lastmarket</i>
                       </div>
                   </div>
               </div>
           </div>
         }
    }
</div>
